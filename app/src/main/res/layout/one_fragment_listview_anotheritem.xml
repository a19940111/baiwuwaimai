<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"

    >



    <ImageView
        android:layout_width="150dp"
        android:layout_height="80dp"
        android:id="@+id/imageView"
        android:scaleType="centerInside"
        android:src="@mipmap/ic_launcher"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/imageView">

        <TextView
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Large Text"
            android:textColor="@color/black"
            android:id="@+id/textView9"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:singleLine="true"/>

        <ImageView
            android:layout_marginTop="5dp"
            android:layout_marginLeft="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView2"
            android:layout_alignParentTop="true"
            android:src="@drawable/waimai_shoplist_item_icon_jian"
            android:layout_toRightOf="@+id/textView9"
            android:layout_toEndOf="@id/textView9"/>

        <ImageView
            android:layout_margin="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView3"
            android:layout_alignParentTop="true"
            android:src="@drawable/waimai_shoplist_item_icon_juan"
            android:layout_toRightOf="@+id/imageView2"
            android:layout_toEndOf="@id/imageView2"
            />

        <ImageView
            android:layout_marginTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView4"
            android:layout_alignParentTop="true"
            android:src="@drawable/waimai_shoplist_item_icon_mian"
            android:layout_toRightOf="@+id/imageView3"
            android:layout_toEndOf="@id/imageView3"
           />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView5"
            android:layout_below="@+id/imageView3"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:src="@drawable/businesslistings_list_icon_star_full"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView6"
            android:src="@drawable/businesslistings_list_icon_star_full"
            android:layout_below="@+id/imageView3"
            android:layout_toRightOf="@id/imageView5"
            android:layout_toEndOf="@id/imageView5"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView7"
            android:src="@drawable/businesslistings_list_icon_star_full"
            android:layout_below="@+id/imageView3"
            android:layout_toRightOf="@id/imageView6"
            android:layout_toEndOf="@id/imageView6"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView8"
            android:src="@drawable/businesslistings_list_icon_star_full"
            android:layout_below="@+id/imageView3"
            android:layout_toRightOf="@id/imageView7"
            android:layout_toEndOf="@id/imageView7"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView9"
            android:src="@drawable/businesslistings_list_icon_star_half"
            android:layout_below="@+id/imageView3"
            android:layout_toRightOf="@id/imageView8"
            android:layout_toEndOf="@id/imageView8"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="已经出售566份"
            android:textColor="@color/black"
            android:id="@+id/textView11"
            android:textSize="10dp"
            android:layout_below="@+id/imageView3"
            android:layout_toEndOf="@id/imageView9"
            android:layout_toRightOf="@id/imageView9"
            android:layout_alignBottom="@+id/imageView9"
            android:layout_marginLeft="5dp"/>

        <TextView
            android:textSize="10dp"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="990m"
            android:id="@+id/textView12"
            android:layout_alignBottom="@+id/textView11"
            android:layout_alignTop="@id/textView11"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="起送20元|配送5元|平均45分钟"
            android:id="@+id/textView13"
            android:textColor="@color/black"
            android:layout_below="@+id/imageView5"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"/>

    </RelativeLayout>


</RelativeLayout>